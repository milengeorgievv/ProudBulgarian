<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProudBulgarian.MainPage">

    <StackLayout VerticalOptions="Center">
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Proud Bulgarian" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Button Text="Profile" Clicked="Profile_Clicked"></Button>
        <Button Text="Singleplayer" Clicked="Singleplayer_Clicked"></Button>
        <Button Text="Multiplayer" Clicked="Multiplayer_Clicked"></Button>
        <Button Text="Daily Challenge" Clicked="Challenge_Clicked"></Button>
        <Button Text="Friends" Clicked="Friends_Clicked"></Button>
        <Button Text="Rankings" Clicked="Rankings_Clicked"></Button>
        <Button Text="Exit" Clicked="Exit_Clicked"></Button>
    </StackLayout>

</ContentPage>
