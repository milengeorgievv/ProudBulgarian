<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProudBulgarian.MainPage">

    <StackLayout VerticalOptions="Center"
                 Margin="20">
        <Frame BackgroundColor="#2196F3" Padding="10" CornerRadius="0">
            <Label Text="Proud Bulgarian" HorizontalTextAlignment="Center" 
                   TextColor="White" FontSize="36"/>
        </Frame>
        <Image x:Name="iconImage"
               Aspect="AspectFit"
               HorizontalOptions="FillAndExpand"
               Margin="0, 0, 0, 10"/>
        <Entry x:Name="usernameEntry"
                   Placeholder="Username"/>
        <Entry x:Name="passwordEntry"
                   Placeholder="Password"
                   IsPassword="True"/>
        <Button x:Name="LoginButton" 
                    Margin="0,40,0,0"
                    Text="Log in" 
                    Clicked="LoginButton_Clicked"/>
        <Button x:Name="registerUserButton"
                Text="Register"
                HorizontalOptions="Center"
                Clicked="registerUserButton_Clicked"/>
    </StackLayout>

</ContentPage>
