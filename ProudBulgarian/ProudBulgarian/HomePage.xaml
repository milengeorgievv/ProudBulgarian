<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProudBulgarian.HomePage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center"
                     Margin="20">
            <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Button Text="Profile" Clicked="Profile_Clicked"></Button>
            <Button Text="Singleplayer" Clicked="Singleplayer_Clicked"></Button>
            <Button Text="Multiplayer" Clicked="Multiplayer_Clicked"></Button>
            <Button Text="Daily Challenge" Clicked="Challenge_Clicked"></Button>
            <Button Text="Friends" Clicked="Friends_Clicked"></Button>
            <Button Text="Ranking" Clicked="Ranking_Clicked"></Button>
            <Button Text="Exit" Clicked="Exit_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>